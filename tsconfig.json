{
  "compilerOptions": {
    "types": ["node"],
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false,
    "noEmit": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "django/static/js/**/*", "dist", "build"]
}