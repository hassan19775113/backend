# ==============================================================================
# PraxiApp Backend - Environment Variables
# ==============================================================================
# Kopiere diese Datei nach .env und passe die Werte an.
# NIEMALS .env in Git committen!
# ==============================================================================

# ------------------------------------------------------------------------------
# DJANGO SETTINGS
# ------------------------------------------------------------------------------

# Settings-Modul (dev, prod)
DJANGO_SETTINGS_MODULE=praxi_backend.settings_prod

# Zufällig generierter Secret Key (mindestens 50 Zeichen)
# Generieren mit: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-here-change-me-minimum-50-chars

# Debug-Modus (False in Produktion!)
DEBUG=False

# Erlaubte Hosts (kommagetrennt)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ------------------------------------------------------------------------------
# SYSTEM DATABASE (default) - Django-Managed
# ------------------------------------------------------------------------------
# Enthält: Users, Roles, Sessions, Appointments, Operations, PatientFlow

SYS_DB_NAME=praxiapp_system
SYS_DB_USER=postgres
SYS_DB_PASSWORD=your-secure-password-here
SYS_DB_HOST=db
SYS_DB_PORT=5432
SYS_DB_CONN_MAX_AGE=60

# ------------------------------------------------------------------------------
# MEDICAL DATABASE (medical) - Legacy/Read-Only
# ------------------------------------------------------------------------------
# Enthält: Patients (unmanaged, keine Migrationen)

MED_DB_NAME=praxiapp_medical
MED_DB_USER=postgres
MED_DB_PASSWORD=your-secure-password-here
MED_DB_HOST=db
MED_DB_PORT=5432
MED_DB_CONN_MAX_AGE=60

# ------------------------------------------------------------------------------
# REDIS / CELERY
# ------------------------------------------------------------------------------

REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ------------------------------------------------------------------------------
# JWT AUTHENTICATION
# ------------------------------------------------------------------------------

# Separater Signing Key für JWT (optional, sonst wird SECRET_KEY verwendet)
JWT_SIGNING_KEY=your-jwt-signing-key-here-minimum-50-chars

# ------------------------------------------------------------------------------
# SECURITY
# ------------------------------------------------------------------------------

# CORS: Erlaubte Origins (kommagetrennt)
CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://app.your-domain.com

# CSRF: Trusted Origins (kommagetrennt)
CSRF_TRUSTED_ORIGINS=https://your-frontend.com,https://app.your-domain.com

# ------------------------------------------------------------------------------
# EMAIL
# ------------------------------------------------------------------------------

EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@your-domain.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=PraxiApp <noreply@your-domain.com>

# ------------------------------------------------------------------------------
# LOGGING & MONITORING
# ------------------------------------------------------------------------------

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Sentry DSN (optional)
SENTRY_DSN=

# ------------------------------------------------------------------------------
# DEPLOYMENT (Gunicorn)
# ------------------------------------------------------------------------------

# Gunicorn Workers (2-4 x CPU cores)
GUNICORN_WORKERS=4

# Bind Address
GUNICORN_BIND=0.0.0.0:8000

# ------------------------------------------------------------------------------
# DOCKER / COMPOSE
# ------------------------------------------------------------------------------

# Compose Project Name
COMPOSE_PROJECT_NAME=praxiapp

# Tag für Docker Images
IMAGE_TAG=latest

