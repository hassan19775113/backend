# ==============================================================================
# PraxiApp Backend - Environment Variables (LOCAL DEV)
# ==============================================================================
# Generated automatically because no .env existed.
# For production, replace placeholders and switch DJANGO_SETTINGS_MODULE.
# NEVER commit .env.
# ==============================================================================

# ------------------------------------------------------------------------------
# DJANGO SETTINGS
# ------------------------------------------------------------------------------

# Dev uses SQLite via praxi_backend.settings_dev
DJANGO_SETTINGS_MODULE=praxi_backend.settings_dev

# For local dev this can be any string; for prod generate a strong key.
DJANGO_SECRET_KEY=dev-only-change-me

# Dev flags (settings_dev.py overrides DEBUG/ALLOWED_HOSTS anyway)
DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# ------------------------------------------------------------------------------
# SYSTEM DATABASE (default) - Production placeholders
# ------------------------------------------------------------------------------
SYS_DB_NAME=praxiapp_system
SYS_DB_USER=postgres
SYS_DB_PASSWORD=your-secure-password-here
SYS_DB_HOST=localhost
SYS_DB_PORT=5432
SYS_DB_CONN_MAX_AGE=60

# ------------------------------------------------------------------------------
# MEDICAL DATABASE (medical) - Production placeholders
# ------------------------------------------------------------------------------
MED_DB_NAME=praxiapp
MED_DB_USER=postgres
MED_DB_PASSWORD=your-secure-password-here
MED_DB_HOST=localhost
MED_DB_PORT=5432
MED_DB_CONN_MAX_AGE=60

# ------------------------------------------------------------------------------
# REDIS / CELERY (Production placeholders)
# ------------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# ------------------------------------------------------------------------------
# JWT AUTHENTICATION (optional)
# ------------------------------------------------------------------------------
JWT_SIGNING_KEY=

# ------------------------------------------------------------------------------
# SECURITY (Production placeholders)
# ------------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=
CSRF_TRUSTED_ORIGINS=

# ------------------------------------------------------------------------------
# DEPLOYMENT (Gunicorn)
# ------------------------------------------------------------------------------
GUNICORN_WORKERS=4
GUNICORN_BIND=0.0.0.0:8000
